{
  "name": "aypi",
  "version": "0.8.6",
  "description": "Software AyPi per gestione applicativi AGPress",
  "main": "dist-ts/main.js",
  "scripts": {
    "start": "npm run build:ts && electron .",
    "build:ts": "node tools\\build-ts.js",
    "build:dir": "npm run build:ts && electron-builder --dir",
    "start:packaged": "npm run build:dir && dist\\win-unpacked\\AyPi.exe --remote-debugging-port=9222",
    "build": "npm run build:ts && electron-builder",
    "release": "npm run build:ts && electron-builder --publish always",
    "postversion": "npm run build:ts && electron-builder --publish always",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "scriptsComments": {
    "postversion": "npm version [major/minor/patch] per creare la nuova release in automatico"
  },
  "author": "Ayrton Pizzi",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.13.4",
    "electron": "^34.3.0",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.24.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@network-utils/arp-lookup": "^2.1.0",
    "ajv": "^6.12.6",
    "axios": "^1.13.2",
    "bwip-js": "^4.8.0",
    "chart.js": "^4.5.1",
    "dhtmlx-gantt": "*",
    "electron-log": "^5.3.1",
    "electron-prompt": "^1.7.0",
    "electron-updater": "^6.3.9",
    "hash-wasm": "^4.12.0",
    "nodemailer": "^7.0.12",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4",
    "update-electron-app": "^3.1.1",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.Agpress.AyPi",
    "productName": "AyPi",
    "publish": [
      {
        "provider": "github",
        "owner": "AGPress-Tech",
        "repo": "AyPi",
        "releaseType": "release",
        "private": false
      }
    ],
    "mac": {
      "icon": "assets/app-icon.icns"
    },
    "win": {
      "icon": "assets/app-icon.ico",
      "target": "nsis",
      "sign": false
    },
    "linux": {
      "icon": "assets/app-icon.png"
    },
    "directories": {
      "output": "dist"
    }
  }
}
