{
  "name": "aypi",
  "version": "0.6.1",
  "description": "Software AyPi per gestione applicativi AGPress",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "release": "electron-builder --publish always",
    "postversion": "electron-builder --publish always",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "scriptsComments": {
    "postversion": "npm version [major/minor/patch] per creare la nuova release in automatico"
  },
  "author": "Ayrton Pizzi",
  "license": "ISC",
  "devDependencies": {
    "electron": "^34.3.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "@network-utils/arp-lookup": "^2.1.0",
    "electron-log": "^5.3.1",
    "electron-prompt": "^1.7.0",
    "electron-updater": "^6.3.9",
    "update-electron-app": "^3.1.1"
  },
  "build": {
    "appId": "com.Agpress.AyPi",
    "productName": "AyPi",
    "publish": [
      {
        "provider": "github",
        "owner": "AGPress-Tech",
        "repo": "AyPi",
        "releaseType": "release",
        "private": false
      }
    ],
    "mac": {
      "icon": "assets/app-icon.icns"
    },
    "win": {
      "icon": "assets/app-icon.ico",
      "target": "nsis",
      "sign": false
    },
    "linux": {
      "icon": "assets/app-icon.png"
    },
    "directories": {
      "output": "dist"
    }
  }
}
